pipeline {
    agent any
    stages {
        stage('build') {
            steps {
            
                bat "docker build -t springboot-docker"
            }
        }
        stage('run') {
            steps {
                
                bat "docker run -p 8181:8181 springboot-docker"
            }
        }
        stage('dockerhub') {
            steps {
                
                bat "docker push ahlamsd/docker-jenkins:springboot-docker"
            }
        }
       
    }
}
